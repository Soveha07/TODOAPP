<div class="container-fluid d-flex column justify-content-center align-items-center full-height">
  <div class="form-group p-3 border rounded shadow h-50">    
    <%= form_with(model: category) do |form| %>
      <% if category.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

            <ul>
              <% category.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

      <h5 class="text-center mb-5">Category</h5>
      <div class="mb-5">
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name, class:"form-control", placeholder:"Personal..." %>
      </div>

      <div class="d-flex flex-column mb-4">
        <%= form.submit 'Save Category', class: 'btn navBtn text-white align-self-center' %>
      </div>
    <% end %>
  </div>
</div>
